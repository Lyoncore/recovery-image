#!/bin/bash

exec > >(tee -i /tmp/pre-populate-filesystem.log)
exec 2>&1

set -ex

backup_writable () {
    echo "backup writable.tar.xz"
    mkdir $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/factory/ || true
    tar --xattrs -Jcpf $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/factory/writable.tar.xz -C $PWD/$UBUNTU_IMAGE_HOOK_ROOTFS .
}

backup_bootfs () {
    echo "backup bootfs to system-boot.tar.xz"
    mkdir $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/factory/ || true
    tar --xattrs -Jcpf $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/factory/system-boot.tar.xz -C $UBUNTU_IMAGE_HOOK_BOOTFS .
}

populate_recovery_initrd_kernel () {
    echo "populate recovery initrd"
    KERNEL=$(find $UBUNTU_IMAGE_HOOK_ROOTFS/system-data/var/lib/snapd/snaps/ -name '*kernel_*.snap' | xargs basename)
    mkdir -p $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/$KERNEL || true
    cdir=$PWD
    TMPDIR=$(mktemp -d)
    SQUASH_TMPDIR=$(mktemp -d)
    cd $SQUASH_TMPDIR
    unsquashfs $($cdir/$UBUNTU_IMAGE_HOOK_ROOTFS/system-data/var/lib/snapd/snaps/$KERNEL)
    INITRD=$cdir/$SQUASH_TMPDIR/squashfs-root/initrd.img
	KERNEL_IMG=$cdir/$SQUASH_TMPDIR/squashfs-root/kernel.img
    cd $TMPDIR
    if file $INITRD | grep 'LZMA \| XZ'; then
        unxz < $INITRD | cpio -i
        cp $cdir/$UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/initrd-hooks/scripts/local-premount/00_recovery scripts/local-premount/
        sed -i '1i/scripts/local-premount/00_recovery \"$@\"' scripts/local-premount/ORDER
        find | cpio --quiet -o -H newc | xz -c9 --check=crc32 > $cdir/$UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/$KERNEL/initrd.img
    elif file $INITRD | grep gzip; then
        gunzip < $INITRD | cpio -i
        cp $cdir/$UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/initrd-hooks/scripts/local-premount/00_recovery scripts/local-premount/
        sed -i '1i/scripts/local-premount/00_recovery \"$@\"' scripts/local-premount/ORDER
        find | cpio --quiet -o -H newc | gzip -9 > $cdir/$UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/$KERNEL/initrd.img
    fi

	cp $KERNEL_IMG $cdir/$UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/$KERNEL/

    cd $cdir
    rm -rf $TMPDIR $SQUASH_TMPDIR
}

backup_snaps() {
    echo "backup snaps"
    CORE=$(find $UBUNTU_IMAGE_HOOK_ROOTFS/system-data/var/lib/snapd/snaps/ -name 'core_*.snap')
    KERNEL=$(find $UBUNTU_IMAGE_HOOK_ROOTFS/system-data/var/lib/snapd/snaps/ -name '*kernel_*.snap')

    mkdir $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/backup_snaps
    cp $CORE $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/backup_snaps/$(basename $CORE)
    cp $KERNEL $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/backup_snaps/$(basename $KERNEL)
}

prepare_writable_squashfs() {
    echo "prepare writable squashfs"
    mksquashfs $UBUNTU_IMAGE_HOOK_GADGET/writable-includes $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/writable-includes.squashfs -all-root
    rm -rf $UBUNTU_IMAGE_HOOK_GADGET/writable-includes
}

_parse_yaml() {
    # $1: the yaml file path
    # $2: the first key header
    # $3: the second key header
    local file=$1
    local head1=$2 head2=$3
    local s='[[:space:]]*' w='[a-zA-Z0-9_-]*' fs=$(echo @|tr @ '\034')
    sed -ne "s|^\($s\):|\1|" \
        -e "s|^\($s\)\($w\)$s:$s[\"']\(.*\)[\"']$s\$|\1$fs\2$fs\3|p" \
        -e "s|^\($s\)\($w\)$s:$s\(.*\)$s\$|\1$fs\2$fs\3|p"  $file |
    awk -F$fs '{
      indent = length($1)/2;
      vname[indent] = $2;
      for (i in vname) {if (i > indent) {delete vname[i]}}
      if (length($3) > 0) {
         vn=""; for (i=0; i<indent; i++) {vn=(vn)(vname[i])}
         if (vn == "'$head1'" && $2 == "'$head2'" )
            printf("%s", $3);
      }
    }'
}

_check_u-boot-tools() {
    if [ ! -f /usr/bin/fw_setenv ];then
        echo "ERROR: Cannot find fw_setenv, please install u-boot-tools"
        exit 1
    fi
}

_gen_u-boot_cfg () {
    TMP=$1
    path=$2
    cat << EOF > $TMP
$path 0x0000 0x20000
$path 0x0000 0x20000
EOF

}

_check_grub-common() {
    if [ ! -f /usr/bin/grub-editenv ];then
        echo "ERROR: Cannot find grub-editenv, please install grub-common"
        exit 1
    fi
}

update_bootloader_cfg() {
    echo "update_bootloader_cfg"
    recovery_type=$(_parse_yaml $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/config.yaml recovery type | grep -o '^[^#]*')
    recovery_label=$(_parse_yaml $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/config.yaml recovery filesystem-label | grep -o '^[^#]*')
    bootloader=$(_parse_yaml $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/config.yaml configs bootloader | grep -o '^[^#]*')
    if [ $bootloader == 'u-boot' ];then
        _check_u-boot-tools
        TMP=$(mktemp)
        REL_PATH=$(realpath --relative-to=$PWD $UBUNTU_IMAGE_HOOK_BOOTFS/uboot.env)
        _gen_u-boot_cfg $TMP $REL_PATH

        if [ $recovery_type == "factory_install" ];then
            fw_setenv -c $TMP snap_mode recovery
        else # factory_restore does not need snap_mode preset, headless_installer mode either
            fw_setenv -c $TMP snap_mode
        fi
        fw_setenv -c $TMP recovery_label LABEL=$recovery_label
        RECOVERY_CORE=$(fw_printenv -c $TMP snap_core | cut -d '=' -f 2)
        RECOVERY_KERNEL=$(fw_printenv -c $TMP snap_kernel | cut -d '=' -f 2)
        fw_setenv -c $TMP recovery_core $RECOVERY_CORE
        fw_setenv -c $TMP recovery_kernel $RECOVERY_KERNEL
        rm $TMP
    elif [ $bootloader == 'grub' ]; then
        _check_grub-common

        RECOVERY_CORE=$(grub-editenv $UBUNTU_IMAGE_HOOK_BOOTFS/EFI/ubuntu/grubenv list | grep snap_core | cut -d '=' -f 2)
        RECOVERY_KERNEL=$(grub-editenv $UBUNTU_IMAGE_HOOK_BOOTFS/EFI/ubuntu/grubenv list | grep snap_kernel | cut -d '=' -f 2)
        grub-editenv $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/efi/ubuntu/grubenv set recovery_core=$RECOVERY_CORE
        grub-editenv $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/efi/ubuntu/grubenv set recovery_kernel=$RECOVERY_KERNEL
        grub-editenv $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/efi/ubuntu/grubenv set recovery_label=$recovery_label
        grub-editenv $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/efi/ubuntu/grubenv set recoverytype=$recovery_type
        if [ $recovery_type == "headless_installer" ];then
            installer_label=$(_parse_yaml $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/recovery/config.yaml recovery installerfslabel | grep -o '^[^#]*')
            grub-editenv $UBUNTU_IMAGE_HOOK_GADGET/recovery-assets/efi/ubuntu/grubenv set installerfslabel=$installer_label
        fi
    else
        echo "Unkonw bootloader:$bootloader"
        exit 1
    fi  
}

backup_writable
backup_bootfs
populate_recovery_initrd_kernel
backup_snaps
prepare_writable_squashfs
update_bootloader_cfg
